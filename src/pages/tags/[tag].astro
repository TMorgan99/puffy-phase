---
import Layout from "@layouts/Layout.astro";
import BlogList from "@components/BlogList.astro";

export async function getStaticPaths({}) {
  const allPosts = await Astro.glob("../posts/*.md");

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.frontmatter.tags.includes(tag)
    );

    return {
      props: { posts: filteredPosts, tags: uniqueTags },
      params: { tag },
    };
  });
}

// ===
// Route:
const { tag } = Astro.params;
// Props:
const { posts, tags } = Astro.props;

const pageTitle = `Articles containing ${tag}`;
---

<Layout {pageTitle}>
  <p>Posts tagged with {tag}</p>

  <ul>
    {
      posts.map((post) => (
        <BlogList url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>

  <h2>Other topics of interest</h2>
  <ul>
    {tags.map((tag) => <BlogList url={tag} title={`about: ${tag}`} />)}
  </ul>
</Layout>
